<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/name_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/margin_padding_around"
        android:autofillHints="name"
        android:hint="@string/name_field_label"
        android:inputType="text"
        android:maxLines="1">

    </EditText>

    <EditText
        android:id="@+id/phone_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_textfield"
        android:autofillHints="phone"
        android:hint="@string/phone_field_label"
        android:inputType="phone"
        android:maxLines="1">

    </EditText>
</androidx.constraintlayout.widget.ConstraintLayout>